WindowManager:
    WelcomePage:
    LobbyPage:


<WelcomePage>
    name: "welcome"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        background_color: 1,0,0,1
        Label:
            name: "platzhalter"
        Button:
            text: "Start"
            background_color: 0,0,1,1
            size_hint_x: 1
            size_hint_y: 0.25
            font_size: 120
            on_release:
                text: "Spiel wird erstellt, bitte warten!"
                app.root.current = "lobby"
                root.manager.transition.direction = "left"

<LobbyPage>
    name: "lobby"
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Klick mich"
            on_release:
                app.showWLAN(self,root)
        Label:
            text: "2. QR-Code Scannen"
        Label:
            text: "3. Erstelle dein Benutzer und deine Fragen"
        Label:
            text:  "4. Schliese den Browser nich!"
        Button:
            text: "Bereit!"
            on_release:

        Button:
            text: "zurueck"
            on_release:
                app.root.current = "welcome"
                root.manager.transition.direction = "right"

