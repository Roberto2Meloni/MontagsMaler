WindowManager:
    WelcomePage:
    TutorialPage:
    LobbyPage:
    PainterPage:


<WelcomePage>
    name: "welcome"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.png"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            name: "platzhalter"
            background_color: 1,0,0,1
        Button:
            text: "Start"
            background_color: 0,0,1,1
            size_hint_x: 1
            size_hint_y: 0.25
            font_size: 120
            on_release:
                text: "Spiel wird erstellt, bitte warten!"
                app.root.current = "tutorial"
                root.manager.transition.direction = "left"
                helperFunctionGame.lobbyFileCreater()

<TutorialPage>
    name: "tutorial"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "1. Verbinde dich mit dem WLAN"
        Label:
            text: "2. QR-Code Scannen"
        Label:
            text: "3. Erstelle dein Benutzer und deine Fragen"
        Label:
            text:  "4. Schliese den Browser nich!"
        Button:
            orientation: "horizontal"
            text: "verstanden, zeige Loby!"
            on_release:
                app.root.current = "lobby"
                root.manager.transition.direction = "left"

        Button:
            text: "zurueck"
            orientation: "horizontal"
            on_release:
                app.root.current = "welcome"
                root.manager.transition.direction = "right"
        Button:
            text: "Wie lautet mein WLAN?"
            orientation: "horizontal"
            on_release:
                app.whatsMyWLAN(self,root)

<LobbyPage>
    name: "lobby"
    BoxLayout
        orientation: "vertical"
        Label:
            text: "Lobby"
            font_size: 30
            halign: 'left'
            valign: 'middle'
            size_hint: (1,0.25)
        Label:
            name: "platzhalter"
        Button:
            text: "Lobby ist bereit!"
            size_hint_x: 1
            size_hint_y: 0.25
            font_size: 60

<PainterPage>
    name: "painter"
    Painter